<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.complaint.Finish"
    android:background="@color/Residential">

    <Button
        android:id="@+id/newcom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/exitapp"
        android:layout_alignLeft="@+id/newc"
        android:layout_alignRight="@+id/newc"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_bg_rounded_corners"
        android:drawableRight="@drawable/upload"
        android:text="@string/fin_b3"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fin_text1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/exitapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newcom"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/newcom"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_bg_rounded_corners"
       android:drawableRight="@drawable/logout"
        android:text="@string/fin_b4"/>

    <Button
        android:id="@+id/newc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/newcom"
        android:layout_alignLeft="@+id/exit"
        android:layout_alignRight="@+id/exit"
        android:layout_marginBottom="40dp"
        android:drawableRight="@drawable/menu"
        android:background="@drawable/button_bg_rounded_corners"
        android:text="@string/fin_b2"/>

    <Button
        android:id="@+id/exit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/newc"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:drawableRight="@drawable/home"
        android:background="@drawable/button_bg_rounded_corners"

        android:text="@string/fin_b1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ttt"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />


</RelativeLayout><!-- From: file:/C:/Users/0/complaint/res/layout/activity_finish.xml -->