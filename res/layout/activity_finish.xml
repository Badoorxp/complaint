<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.complaint.Finish" >

    <Button
        android:id="@+id/newcom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/exitapp"
        android:layout_alignLeft="@+id/newc"
        android:layout_alignRight="@+id/newc"
        android:layout_marginBottom="23dp"
        android:text="شكوى جديدة" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="تمت العملية بنجاح"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/exitapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newcom"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/newcom"
        android:layout_marginBottom="30dp"
        android:text="خروج" />

    <Button
        android:id="@+id/newc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/newcom"
        android:layout_alignLeft="@+id/exit"
        android:layout_alignRight="@+id/exit"
        android:layout_marginBottom="30dp"
        android:text="عرض شكوى مطروحة" />

    <Button
        android:id="@+id/exit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/newc"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:text="العودة الى الرئيسية" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:src="@drawable/download" />

</RelativeLayout>